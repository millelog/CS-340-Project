<html>
	<h3>Update Employee Information</h3>
	<form id="update-employees" action="/employees" method="post">
		<div class="form-group">
			Name: <input type="text" name="Emp_Name" value="{{employee.Emp_Name}}">
		</div>

		<div class="form-group">
			Store: <select name="Store_ID">
				{{#each stores}}
				<option value = "{{id}}">{{id}}</option>
				{{/each}}
			</select><br>
		</div>

		<div class="form-group">
			Phone Number: <input type="tel" name="Emp_Phone_Number" value="{{employee.Emp_Phone_Number}}">
		</div>
		<div class="form-group">
			Street Address: <input type="text" name="Emp_Address_Street" value="{{employee.Emp_Address_Street}}">
		</div>
		<div class="form-group">
			Zip Code: <input type="number" name="Emp_Address_Zip" value="{{employee.Emp_Address_Zip}}">
		</div>

	</form>

	<button onclick="updateEmployees({{employee.Emp_ID}})">Update</button>

</html>
