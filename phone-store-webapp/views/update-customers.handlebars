<html>

	<div class="container">
			<h3>Update Customer Information</h3>

			<form id="update-customers" action="/customers"	method="post">	
				<div class="form-group">			
					Name: <input type="text" name="Cust_Name" value="{{customer.Cust_Name}}" required>
				</div>
				<div class="form-group">			
					Email: <input type="email" name="Cust_Email" value="{{customer.Cust_Email}}" required>
				</div>
				<div class="form-group">			
					Phone Number: <input type="number" name="Cust_Phone_Number" value="{{customer.Cust_Phone_Number}}" required>
				</div>
				<div class="form-group">			
					Street Address: <input type="text" name="Cust_Address_Street" value="{{customer.Cust_Address_Street}}">
				</div>
				<div class="form-group">			
					Zip Code: <input type="number" name="Cust_Address_Zip" value="{{customer.Cust_Address_Zip}}">
				</div>
			</form>
		<button onclick="updateCustomers({{customer.Cust_ID}})">Update</button>
	</div>

	<div class="container">
		<h3>Add New Order</h3>
		<form id="add-orders" action="/customers/{{customer.Cust_ID}}"	method="post">	
				<div class="form-group">
					<!-- get employee id as 'employeeid' -->
					Select Employee ID: <select name="employeeselect" required>
						{{#each employees}}
						<option value="{{id}}">ID:{{id}}-{{name}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group">

					Select SKU: <select name="phoneselect">{{#each phonenames}}
						<option value="{{SKU}}">SKU:{{SKU}} - {{Phone_Name}}</option>
					{{/each}}</select>
		
				</div>
				<div>
					Enter IMEI: <input type="number" name="IMEI">
				</div>

				<div class="form-group">
					Optional: Add Service Plan: <select name="planselect">{{#each phoneplans}}
						<option value="{{planid}}">{{planName}}</option>
						{{/each}}
					</select>
				</div>
				<div class="form-group">
					Date: <input type="date" name="Order_Date">
				</div>
				<button type="submit" class="btn btn-default">Submit</button>
		</form>

	</div>
	<h3>Display Orders:</h3>
	<table class="table">
		<thead>
			<th scope="col">Order ID</th>
			<th scope="col">Order Date</th>
			<th scope="col">Employee</th>
			<th scope="col">Phone Purchased</th>
			<th scope="col">Plan Purchased</th>
			<th scope="col">Phone Price</th>
		</thead>
		<tbody>
			{{#each orderinfos}}
			<tr>
				<td>{{Order_ID}}</td>
				<td>{{Order_Date}}</td>
				<td>{{Emp_Name}}</td>
				<td>{{Phone_Name}}</td>
				<td>{{Plan_Name}}</td>	
				<td>{{Phone_Price}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>





</html>