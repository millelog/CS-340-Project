<html>{{#each foo}}
{{this}}
{{/each}}

<div>
	<p>
		This page allows the phone store employees (manager) to add new service plans to the database, and look up an existing service plan to find its cost and description.
	</p>
</div>

<h3>Service Plans</h3>
<!-- add new service plan -->
<h4>Add New Service Plan to DB</h4>
<form action="/service_plans" method="post">
		<div class="form-group">
			Name: <input type="text" name="Plan_Name" placeholder="Name" required="true">
		</div>
		<div class="form-group">
		   Cost: $<input type="number" name="Plan_Cost", required="true">
		</div>
		<div class="form-group">
			Plan Description: <input type="text" name="Plan_Desc", required="true">
		</div>

		<button type="submit" class="btn btn-default">Submit</button>
	</form>
<!-- display service plans -->

<h4>Display Service Plans</h4>

<table class="table">
		<thead>
			<th scope="col">Plan ID</th>
			<th scope="col">Name</th>
			<th scope="col">Cost</th>
			<th scope="col">Description</th>
		</thead>
		<tbody>
			{{#each service_plans}}
			<tr>
				<td>{{Plan_ID}}</td>
				<td>{{Plan_Name}}</td>
				<td>{{Plan_Cost}}</td>
				<td>{{Plan_Desc}}</td>
			</tr>
			{{/each}}
		</tbody>
	</table>


</html>	
