<html>
	<h3>Update Stores Information</h3>
	<form id="update-stores" action="/stores" method="post">
		<div class="form-group">
			Phone Number: <input type="tel" name="Store_Phone_Number" value="{{store.Store_Phone_Number}}">
		</div>
		<div class="form-group">
			Street Address: <input type="text" name="Store_Address_Street" value="{{store.Store_Address_Street}}">
		</div>

		<div class="form-group">
			Zip Code: <input type="number" name="Store_Address_Zip" value="{{store.Store_Address_Zip}}">
		</div>

	</form>

	<button onclick="updateStores({{store.Store_ID}})">Update</button>

</html>