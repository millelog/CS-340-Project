<html>{{#each foo}}
{{this}}
{{/each}}

<div>
	<p>
		This page allows the phone store employees (manager) to add new employee to the database, and look up an employee and see their sales (orders).
	</p>
</div>

<h3>Employees</h3>
<!-- add new employee -->
<h4>Add New Employee to DB</h4>
<form action="/employees" method="post">
		<div class="form-group">
			Name: <input type="text" name="EMP_Name" placeholder="Name" required="true">
		</div>
		<div class="form-group">
			Store: <select name="Store_ID">
				{{#each stores}}
				<option value = "{{id}}">{{id}}</option>
				{{/each}}
			</select><br>
		</div>
		<div class="form-group">
			Phone Number: <input type="tel" name="EMP_Phone_Number" placeholder="(XXX) XXX - XXXX" required="true">
		</div>
		<div class="form-group">
			Street Address: <input type="text" name="EMP_Address_Street" placeholder="123 Main St" required="true">
		</div>
		<div class="form-group">
			Zip Code: <input type="number" name="Emp_Address_Zip" placeholder="11223" required="true">
		</div>

		<button type="submit" class="btn btn-default">Submit</button>
	</form>
<!-- search for employees -->
<h4>Search For Employee</h4>
<p style="color: red">Work in progress</p>
<!-- display employees -->

<h4>Display Employees</h4>

<table class="table">
		<thead>
			<th scope="col">Name</th>
			<th scope="col">Store ID</th>
			<th scope="col">Phone Number</th>
			<th scope="col">Street Address</th>
			<th scope="col">Zip Code</th>
		</thead>
		<tbody>
			{{#each employees}}
			<tr>
				<td>{{EMP_Name}}</td>
				<td>{{Store_ID}}</td>
				<td>{{EMP_Phone_Number}}</td>
				<td>{{EMP_Address_Street}}</td>
				<td>{{Emp_Address_Zip}}</td>		
				<!-- All attributes for employees start with EMP except for zip, starts with Emp -->
			</tr>
			{{/each}}
		</tbody>
	</table>


</html>	